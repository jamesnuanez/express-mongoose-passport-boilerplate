<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= title %> | <%= siteName %></title>
  <meta name="description" content="Node.js MongoDB Starter Application built by James Nuanez" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <header>
    <h1><%= siteName %></h1>
    <nav>
      <h3>External</h3>
      <ul>
        <% externalMenu.forEach(item => { %>
          <li>
            <a href="/<%= item.slug %>">
              <% if (item.page === title) { %>
                <strong><%= item.page %></strong>
              <% } else { %>
                <%= item.page %>
              <% } %>
            </a>
          </li>
        <% }); %>
      </ul>
      <h3>Internal</h3>
      <ul>
        <% internalMenu.forEach(item => { %>
          <li>
            <a href="/<%= item.slug %>">
              <% if (item.page === title) { %>
                <strong><%= item.page %></strong>
              <% } else { %>
                <%= item.page %>
              <% } %>
            </a>
          </li>
        <% }); %>
      </ul>
    </nav>
  </header>
  <hr>
  <% if (specialMessage) { %>
    <section id="special-message">
      <p>
        <%- specialMessage %>
      </p>
    </section>
  <% } %>
  <% if (Object.entries(flashes).length) { %>
    <section id="flashes">
      <% Object.entries(flashes).forEach(entry => { %>
        <p>
          <%= entry[0] %>: <%- entry[1] %>
        </p>
      <% }) %>
    </section>
  <% } %>
  <% if (specialMessage || Object.entries(flashes).length) { %>
      <hr>
  <% } %>
  <h1><%= title %></h1>
